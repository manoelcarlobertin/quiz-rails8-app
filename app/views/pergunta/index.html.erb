<p class="alert alert-success"><%= notice %></p>

<% content_for :title, "Quizzes" %>

<h1 class="text-primary mb-4">Listagem de Quizzes</h1>

<div class="container">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Título</th>
        <th>Descrição</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @pergunta.each do |perguntum| %>
        <tr>
          <td><%= perguntum.titulo %></td>
          <td><%= perguntum.descricao %></td>
          <td>
            <%= link_to "Editar", edit_perguntum_path(perguntum), class: "btn btn-warning btn-sm" %>
            <%= link_to "Excluir", perguntum, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: "Tem certeza?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="mt-3">
  <%= link_to "Novo Quiz", new_perguntum_path, class: "btn btn-primary" %>
</div>
